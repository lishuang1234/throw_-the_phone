<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- android:shape="" 表示是圆角矩形还是椭圆等等 -->
    <solid android:color="#ff3333" />
    <!-- 背景颜色 -->


    <!-- padding 表示内部空间距离背景图片内部边距 的距离 -->
    <padding
        android:bottom="2dp"
        android:left="5dp"
        android:right="5dp"
        android:top="2dp" />

    <stroke
        android:width="1.5dp"
        android:color="#ff3333" />
    <!-- 图片边框属性 -->
    <corners android:radius="10dp" />
    <!-- 圆角的程度 -->
    <gradient
        android:angle="90"
        android:centerColor="#ff3333"
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="#ff3333"
        android:startColor="#ff3333"
        android:type="linear" />

</shape><!-- From: file:/home/ls/androidDevelop/androidStudioWorkSpace/ls/throw_-the_phone/throw_-the_phone/扔掉手机/res/drawable-mdpi/settingac_tuichu_bg_normal.xml -->