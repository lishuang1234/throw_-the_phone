<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:descendantFocusability="blocksDescendants" >

        <CheckBox
            android:id="@+id/listview_cb_entrue"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:id="@+id/listview_ll_line"
            android:layout_width="1.5dp"
            android:layout_height="70dp"
            android:layout_alignRight="@id/listview_cb_entrue"
            android:background="@color/settingAc_item_press"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/listview_tx_planshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/listview_cb_entrue"
            android:text="8:00   PM"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/listview_tx_planchongfu"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/listview_tx_planshijian"
            android:layout_below="@id/listview_tx_planshijian"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="每天"
            android:textColor="@color/settingAc_tx_content" />

        <TextView
            android:id="@+id/listview_tx_planshichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/listview_tx_planchongfu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/listview_tx_planchongfu"
            android:text="时长"
            android:textColor="@color/settingAc_tx_content" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/studioWorkSpace/扔掉手机/扔掉手机/res/layout/listview_item.xml -->