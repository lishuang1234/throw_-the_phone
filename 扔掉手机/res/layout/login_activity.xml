<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="338dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/login_head_img" />

    <ImageButton
        android:id="@+id/sinaweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/qzone"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_btn_bg_weibo_default"
        android:src="@drawable/ic_btn_weibo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sinaweibo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="选择登录账号"
        android:textColor="@color/green_deep" />

    <ImageButton
        android:id="@+id/qzone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="54dp"
        android:background="@drawable/ic_btn_bg_qq_default"
        android:src="@drawable/ic_btn_qq" />

</RelativeLayout>